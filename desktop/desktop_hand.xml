<?xml version="1.0" encoding="utf-8"?>
<root>
	<panel name="handpanel">
		<anchored height="150" width="450">
			<bottom offset="-35" />
			<right parent="shortcutsanchor" anchor="left" />
		</anchored>
		<class>desktop_hand</class>
		<dynamic />
		<locked />
	</panel>

	<windowclass name="desktop_hand">
		<noclose/>
		<sizelimits>
			<dynamic />
			<minimum width="450" height="180" />
		</sizelimits>
		<script file="desktop/scripts/desktop_hand.lua" />
		<sheetdata>
			<genericcontrol name="frame">
				<frame>partysheet</frame>
				<anchored>
					<top offset="0"/>
					<bottom offset="0" />
					<left offset="0" />
					<right offset="0" />
				</anchored>
			</genericcontrol>
			<windowlist name="hand">
				<script file="desktop/scripts/handlist.lua" />
				<class>desktop_card</class>
				<columns width="150">
					<fillwidth />
				</columns>
				<anchored>
					<left />
					<right />
					<top />
					<bottom />
				</anchored>
			</windowlist>
			<genericcontrol name="discard">
				<script>
					function onDrop(x, y, dragdata)
						if dragdata.isType("shortcut") then
							local sClass, sRecord = dragdata.getShortcutData();

							if sClass == "card" then
								window.onDropCardOnDelete(sRecord);
								return true;
							end
						end
					end
				</script>
				<icon>button_discard</icon>
				<anchored height="40" width="40">
					<bottom offset="-10" />
					<right offset="-10" />
				</anchored>
			</genericcontrol>
		</sheetdata>
	</windowclass>

	<windowclass name="desktop_card">
		<margins control="0,0,0,0" />
		<script>
			local bPopped = false;
			
			function onInit()
				highlight.setEnabled(false);
			end

			function setCardSize(nWidth, nHeight)
				image.setAnchoredWidth(nWidth);
				image.setAnchoredHeight(nHeight);
			end
			
			function onHover(hover)
				if hover and not bPopped then
					highlight.setVisible(true);
					bPopped = true;
				elseif not hover and bPopped then
					highlight.setVisible(false);
					bPopped = false;
				end
			end
		</script>
		<sheetdata>
			<token_card name="image">
				<script file="desktop/scripts/desktop_card.lua" />
			</token_card>
			<icon_missing_token name="missingtoken" />
			<card_highlight name="highlight" />
		</sheetdata>
	</windowclass>

	<windowclass name="shortcuts" merge="join">
		<sheetdata>
			<buttoncontrol name="button_hand">
				<frame name="sidebar_dock_entry_icon" />
				<anchored to="button_visibility" position="above" height="40" />
				<script>
					function onButtonPress()
						DesktopManager.toggleHandVisibility(getValue() == 1);
					end
				</script>
				<state />
				<state />
			</buttoncontrol>
			<genericcontrol name="button_hand_icon">
				<anchored to="button_hand" position="insidetopleft" offset="5,5" width="30" height="30" />
				<icon>sidebar_action_hand</icon>
				<disabled />
			</genericcontrol>
		</sheetdata>
	</windowclass>
</root>